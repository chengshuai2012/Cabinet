<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <com.link.cloud.widget.PublicTitleView
        android:id="@+id/publicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:finish_text_Background="@drawable/border_red_gradient_round"
        app:finish_text_color="@color/color_black_333333"
        app:hint_text="请使用以下方式开柜"
        app:hint_text_color="@color/color_D4D4D4" />


    <RelativeLayout
        android:id="@+id/zhijingmaiLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h219"
        android:layout_marginLeft="@dimen/w45"
        android:layout_marginRight="@dimen/w45"
        android:layout_marginTop="@dimen/h38"
        android:background="@drawable/ic_regular_one"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fingerImage"
            android:layout_width="@dimen/w100"
            android:layout_height="@dimen/w100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w30"
            android:src="@drawable/ic_zhijingmai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/w30"
            android:layout_toRightOf="@+id/fingerImage"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                style="@style/CommonText"
                android:text="@string/mode_one"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/w24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h17"
                android:paddingRight="@dimen/w80"
                android:text="@string/mode_one_hint"
                android:textColor="@color/color_454649"
                android:textSize="@dimen/w16" />


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/xiaochengxuLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h219"
        android:layout_marginLeft="@dimen/w45"
        android:layout_marginRight="@dimen/w45"
        android:layout_marginTop="@dimen/h21"
        android:background="@drawable/ic_regular_two"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wechatImage"
            android:layout_width="@dimen/w100"
            android:layout_height="@dimen/w100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w30"
            android:src="@drawable/ic_xiaochengxu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/w30"
            android:layout_toRightOf="@+id/wechatImage"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                style="@style/CommonText"
                android:text="@string/mode_two"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/w24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h17"
                android:paddingRight="@dimen/w80"
                android:text="@string/mode_two_hint"
                android:textColor="@color/color_454649"
                android:textSize="@dimen/w16" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passwordLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h219"
        android:layout_marginLeft="@dimen/w45"
        android:layout_marginRight="@dimen/w45"
        android:layout_marginTop="@dimen/h21"
        android:background="@drawable/ic_regular_three"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/passwordImage"
            android:layout_width="@dimen/w100"
            android:layout_height="@dimen/w100"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w30"
            android:src="@drawable/ic_password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/w30"
            android:layout_toRightOf="@+id/passwordImage"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                style="@style/CommonText"
                android:text="@string/mode_three"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/w24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h17"
                android:paddingRight="@dimen/w80"
                android:text="@string/mode_three_hint"
                android:textColor="@color/color_454649"
                android:textSize="@dimen/w16" />


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>