<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/h334"
            android:scaleType="fitXY"
            android:src="@drawable/ic_regular_title_bg" />





        <LinearLayout
            android:id="@+id/setLayout"
            android:layout_width="@dimen/text_width_main"
            android:layout_height="@dimen/text_height_main"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/h27"
            android:layout_marginTop="@dimen/h27"
            android:background="@drawable/border_member"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/member"
                style="@style/TextView_Top_Main"
                android:background="@drawable/border_red"
                android:text="@string/member"
                android:textColor="@color/almost_white" />

            <TextView
                android:id="@+id/manager"
                style="@style/TextView_Top_Main"
                android:text="@string/manager"
                android:textColor="@color/text_gray" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_bg"
        >
    <com.link.cloud.widget.PublicTitleView
        android:id="@+id/publicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:finish_text_Background="@drawable/border_gray_corn_gradient"
        app:finish_text_color="@color/color_black_333333"
        app:hint_text="请使用以下方式开柜"
        app:hint_text_color="@color/color_D4D4D4" />


        <LinearLayout
            android:id="@+id/zhijingmaiLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h250"
            android:layout_marginLeft="@dimen/w45"
            android:layout_marginRight="@dimen/w45"
            android:layout_marginTop="@dimen/h38"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w30"
                android:layout_toRightOf="@+id/fingerImage"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/CommonText"
                    android:text="@string/mode_one"
                    android:textColor="@color/color_FFD9B499"
                    android:textSize="@dimen/w24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h17"
                    android:paddingRight="@dimen/w80"
                    android:text="@string/mode_one_hint"
                    android:textColor="@color/color_FFD9B499"
                    android:textSize="@dimen/w16" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginRight="@dimen/margin_main"
                    android:layout_width="@dimen/main_image_height"
                    android:layout_height="@dimen/main_image_height"
                    android:src="@drawable/finger1" />

                <ImageView
                    android:layout_marginRight="@dimen/margin_main"
                    android:layout_width="@dimen/main_image_height"
                    android:layout_height="@dimen/main_image_height"
                    android:src="@drawable/finger2" />

                <ImageView
                    android:layout_width="@dimen/main_image_height"
                    android:layout_height="@dimen/main_image_height"
                    android:src="@drawable/finger3" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/or"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/xiaochengxuLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h250"
            android:layout_marginLeft="@dimen/w45"
            android:layout_marginRight="@dimen/w45"
android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w30"
                android:layout_toRightOf="@+id/wechatImage"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/CommonText"
                    android:text="@string/mode_two"
                    android:textColor="@color/color_FFD9B499"
                    android:textSize="@dimen/w24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h17"
                    android:lineSpacingExtra="@dimen/w10"
                    android:paddingRight="@dimen/w80"
                    android:text="@string/mode_two_hint"
                    android:textColor="@color/color_FFD9B499"
                    android:textSize="@dimen/w16" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginRight="@dimen/margin_main"
                    android:layout_width="@dimen/main_image_height"
                    android:layout_height="@dimen/main_image_height"
                    android:src="@drawable/qrcode" />


            </LinearLayout>
        </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/passwordLayout"
            android:layout_width="@dimen/w226"
            android:layout_height="@dimen/h60"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/h60"
            android:layout_marginLeft="@dimen/w45"
            android:layout_marginRight="@dimen/w45"
            android:layout_marginTop="@dimen/h21"
            android:background="@drawable/border_gray_corn_gradient"
            android:gravity="center"
            android:text="@string/password_open"
            android:textColor="@color/black"
            android:textSize="@dimen/w24"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>
    <EditText
        android:id="@+id/infoId"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h200"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/w24" />

</LinearLayout>