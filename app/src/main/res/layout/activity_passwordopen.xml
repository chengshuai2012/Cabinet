<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <com.link.cloud.widget.PublicTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="@string/password_open" />


    <TextView
        style="@style/CommonText"
        android:layout_marginLeft="@dimen/w31"
        android:layout_marginTop="@dimen/h49"
        android:text="请选择已经使用的柜子"
        android:textColor="@color/dark_black" />


    <LinearLayout
        android:id="@+id/lockLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h65"
        android:layout_marginLeft="@dimen/w31"
        android:layout_marginRight="@dimen/w31"
        android:layout_marginTop="@dimen/h32"
        android:background="@drawable/bg_white_rectangle_corner_r20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/CommonText"
            android:layout_marginLeft="@dimen/w17"
            android:text="@string/lock_location"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/w21" />

        <TextView
            android:id="@+id/lockLocation"
            style="@style/CommonText"
            android:layout_marginLeft="@dimen/w17"
            android:layout_marginRight="@dimen/w17"
            android:layout_weight="1"
            android:drawablePadding="@dimen/w10"
            android:drawableRight="@mipmap/ic_arrow"
            android:gravity="right"
            android:text="@string/lock_location"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/w21" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h508"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lastButton"
            android:layout_width="@dimen/w211"
            android:layout_height="@dimen/h45"
            android:background="@drawable/border_lesson"
            android:gravity="center"
            android:text="@string/last_string"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_42" />

        <TextView
            android:id="@+id/sureButton"
            android:layout_width="@dimen/w211"
            android:layout_height="@dimen/h45"
            android:layout_marginLeft="@dimen/w17"
            android:background="@drawable/border_red_gradient"
            android:gravity="center"
            android:text="@string/sure_string"
            android:textColor="@color/almost_white"
            android:textSize="@dimen/text_size_42" />
    </LinearLayout>

</LinearLayout>