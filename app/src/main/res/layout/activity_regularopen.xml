<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.link.cloud.activity.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/h650"
            android:scaleType="fitXY"
            android:src="@drawable/icon_main_bg" />

        <ImageView
            android:layout_width="@dimen/w244"
            android:layout_height="@dimen/h86"
            android:layout_marginLeft="@dimen/h41"
            android:layout_marginTop="@dimen/h28"
            android:src="@drawable/ic_write_handy_log" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w31"
        android:layout_marginRight="@dimen/w31"
        android:layout_marginTop="@dimen/h32"
        android:orientation="horizontal">

        <TextView
            style="@style/CommonText"
            android:layout_weight="1"
            android:text="@string/well_use_string"
            android:textColor="@color/white"
            android:textSize="@dimen/w40"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/textclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/w32" />

    </LinearLayout>

    <TextView
        style="@style/CommonText"
        android:layout_marginLeft="@dimen/w31"
        android:text="@string/welcome_to_use_sweat_locker"
        android:textColor="@color/white"
        android:textSize="@dimen/w20"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/h40"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/openLayout"
            android:layout_width="@dimen/w300"
            android:layout_height="@dimen/h396"
            android:layout_marginRight="@dimen/h10"
            android:background="@drawable/ic_regular_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/w148"
                android:layout_height="@dimen/h130"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginTop="@dimen/h50"
                android:src="@drawable/ic_regural_open" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/w50"
                android:layout_marginTop="@dimen/h50"
                android:gravity="right"
                android:text="@string/open_string"
                android:textColor="@color/white"
                android:textSize="@dimen/w48"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/w50"
                android:layout_marginTop="@dimen/h10"
                android:gravity="right"
                android:text="Open Ark"
                android:textColor="@color/white"
                android:textSize="@dimen/w24"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/returnLayout"
            android:layout_width="@dimen/w300"
            android:layout_height="@dimen/h396"
            android:layout_marginLeft="@dimen/h10"
            android:background="@drawable/ic_regular_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/w148"
                android:layout_height="@dimen/h130"
                android:layout_marginLeft="@dimen/w50"
                android:layout_marginTop="@dimen/h50"
                android:src="@drawable/ic_regural_close" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/w50"
                android:layout_marginTop="@dimen/h50"
                android:gravity="right"
                android:text="@string/queit_string"
                android:textColor="@color/white"
                android:textSize="@dimen/w48"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/w50"
                android:layout_marginTop="@dimen/h10"
                android:gravity="right"
                android:text="Return Ark"
                android:textColor="@color/white"
                android:textSize="@dimen/w24"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
