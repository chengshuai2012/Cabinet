<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h128"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w30"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/CommonText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h39"
            android:gravity="center"
            android:text="@string/well_use_string"
            android:textColor="@color/color_ABB6C8"
            android:textSize="@dimen/w32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/welcome_to_use_sweat_locker"
            android:textColor="@color/color_ABB6C8"
            android:textSize="@dimen/w20"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/finsh"
        android:layout_width="@dimen/w84"
        android:layout_height="@dimen/w84"
        android:layout_marginRight="@dimen/w30"
        android:background="@drawable/border_red_gradient_round"
        android:gravity="center"
        android:text="@string/back_home"
        android:textColor="@color/black"
        android:textSize="@dimen/w20"
        android:textStyle="bold" />


</LinearLayout>